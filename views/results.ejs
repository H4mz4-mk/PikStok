<%- include("partials/header") %>

<section>
    <div class="container">
      <div class="table-responsive-sm">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Image</th>
              <th scope="col">Width & Height</th>
              <!-- <th scope="col">Description</th> -->
              <th scope="col">Full resolution</th>
            </tr>
          </thead>
          <tbody>
            <% data["results"].forEach( function(picture){ %>
            <tr>
              <th scope="row"><img src="<%=picture.urls.thumb%>" ></th>
              <td><%= picture.width %> x <%= picture.height %></td>
              <!-- <td style="width: 500px;"><%= picture.description%></td> -->
              <td><a href="<%=picture.urls.full%>" class="btn btn-primary">Link</a></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

<%- include("partials/footer") %>